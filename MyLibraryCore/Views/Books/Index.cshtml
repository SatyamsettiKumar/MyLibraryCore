@model IEnumerable<Book>

@{
    ViewBag.Title = "Index";
}

<h1>list of Books</h1>

<a asp-controller="Books" asp-action="Create">AddNew</a>

@if (Model.Count() == 0)
 {
    <h2>No Books</h2>
 }
 else
 {
<ul class="list-group">
    @foreach (var book in Model)
    {
    <li class="list-group-item">

        <lu> <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id"> @book.BookName</a></lu>|
        <lu><a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id"> Edit</a>|
        <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id"> Delete</a></lu>
    </li>
        
    }
</ul>
 }